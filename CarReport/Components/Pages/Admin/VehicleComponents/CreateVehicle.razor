@page "/create/vehicle"

@using DataModelLibrary.Models
@using EntityFrameworkAccess.Repositories
@using EntityFrameworkAccess.Contexts

@inject NavigationManager NavigationManager
@inject CarMaintenanceDbContext CarMaintenanceDbContext

<title>Create Vehicle</title>

<div class="d-flex justify-content-center mb-4 mt-4">
    <h2 class="fw-bold">Create New Vehicle</h2>
</div>

<div class="container d-flex justify-content-center col-lg-8 mb-5">
    <EditForm Model="_vehicle" OnValidSubmit="CreateNewVehicleAsync" class="form-control bg-light" FormName="CreateVehicleForm">
        @if (_creationErrorMessage is not null)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Create failed:</strong> @_creationErrorMessage
            </div>
        }
        <VehicleFormFields Vehicle="_vehicle" />
        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-primary" type="submit" disabled="@_isSubmitting">
                @if (_isSubmitting)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                Create Vehicle
            </button>
        </div>
    </EditForm>
</div>

@code {
    private Vehicle _vehicle = new();
    private EntityRepository<Vehicle> _vehicleRepository = default!;
    private bool _isSubmitting;
    private string? _creationErrorMessage;

    private async Task CreateNewVehicleAsync()
    {
        _isSubmitting = true;
        _creationErrorMessage = null;

        try
        {
            _vehicleRepository = new EntityRepository<Vehicle>(CarMaintenanceDbContext);
            await _vehicleRepository.AddAsync(_vehicle);
            await _vehicleRepository.SaveChangesAsync();
            _vehicle = new Vehicle();
        }
        catch (Exception e)
        {
            _creationErrorMessage = e.Message;
            Console.WriteLine(_creationErrorMessage);
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
