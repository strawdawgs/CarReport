@page "/delete/vehicle/{Id:int}"

@using DataModelLibrary.Models
@using EntityFrameworkAccess.Repositories
@using EntityFrameworkAccess.Contexts

@inject NavigationManager NavigationManager
@inject CarMaintenanceDbContext CarMaintenanceDbContext

<title>Delete Vehicle</title>

<div class="container col-lg-8 mt-4 mb-5">
    @if (_isLoading)
    {
        <div class="alert alert-info">Loading Vehicle…</div>
    }
    else if (_loadErrorMessage is not null)
    {
        <div class="alert alert-danger">
            <strong>Sorry!</strong> We couldn’t load the vehicle. @_loadErrorMessage
        </div>
    }
    else if (_notFound)
    {
        <div class="alert alert-warning">Vehicle (Id=@Id) was not found.</div>
    }
    else
    {
        <div class="d-flex justify-content-center mb-4">
            <h2 class="fw-bold">Delete Vehicle – @_vehicle.DisplayName</h2>
        </div>
        <div class="alert alert-danger">
            <h4 class="mb-1">Are you sure you want to delete this Vehicle?</h4>
            <div><strong>@_vehicle.DisplayName</strong></div>
        </div>
        @if (_deleteErrorMessage is not null)
        {
            <div class="alert alert-danger">
                <strong>Sorry!</strong> We couldn’t delete the vehicle. @_deleteErrorMessage
            </div>
        }
        <div class="d-flex gap-2">
            <button class="btn btn-danger mt-3" @onclick="DeleteCurrentVehicleAsync" disabled="@_isDeleting">
                @if (_isDeleting)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                Delete
            </button>

            <button class="btn btn-secondary mt-3" @onclick="GoBack">Cancel</button>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Vehicle _vehicle = default!;
    private EntityRepository<Vehicle> _vehicleRepository = default!;
    private bool _isLoading = true;
    private bool _notFound;
    private string? _loadErrorMessage;
    private bool _isDeleting;
    private string? _deleteErrorMessage;

    protected override async Task OnParametersSetAsync()
    {
        await LoadVehicleAsync();
    }

    private async Task LoadVehicleAsync()
    {
        _isLoading = true;
        _notFound = false;
        _loadErrorMessage = null;
        _deleteErrorMessage = null;

        try
        {
            _vehicleRepository = new EntityRepository<Vehicle>(CarMaintenanceDbContext);
            var vehicle = await _vehicleRepository.FindByIdAsync(Id);
            if (vehicle is not null)
            {
                _vehicle = vehicle;
            }
            else
            {
                _notFound = true;
            }
        }
        catch (Exception e)
        {
            _loadErrorMessage = $"Error loading Agency with Id {Id}: {e.Message}";
            Console.WriteLine(_loadErrorMessage);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteCurrentVehicleAsync()
    {
        if (_vehicle is null) return;

        _isDeleting = true;
        _deleteErrorMessage = null;

        try
        {
            _vehicleRepository = new EntityRepository<Vehicle>(CarMaintenanceDbContext);
            await _vehicleRepository.DeleteAsync(_vehicle);
            await _vehicleRepository.SaveChangesAsync();
            NavigationManager.NavigateTo($"/");
        }
        catch (Exception e)
        {
            _deleteErrorMessage = e.Message;
            Console.WriteLine(_deleteErrorMessage);
        }
        finally
        {
            _isDeleting = false;
        }
    }

    // TODO: Fix navigation to go back to the previous page instead of always going to the home page.
    private void GoBack() => NavigationManager.NavigateTo("/");
}
