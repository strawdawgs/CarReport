@page "/delete/service-record/{Id:int}"

@using DataModelLibrary.Models
@using EntityFrameworkAccess.Repositories
@using EntityFrameworkAccess.Contexts

@inject NavigationManager NavigationManager
@inject CarMaintenanceDbContext CarMaintenanceDbContext

<title>Delete Service Record</title>

<div class="container col-lg-8 mt-4 mb-5">
    @if (_isLoading)
    {
        <div class="alert alert-info">Loading Service Record…</div>
    }
    else if (_loadErrorMessage is not null)
    {
        <div class="alert alert-danger">
            <strong>Sorry!</strong> We couldn’t load the Service Record. @_loadErrorMessage
        </div>
    }
    else if (_notFound)
    {
        <div class="alert alert-warning">Service Record (Id=@Id) was not found.</div>
    }
    else
    {
        <div class="d-flex justify-content-center mb-4">
            <h2 class="fw-bold">Delete Service Record – (Id=@Id).</h2>
        </div>
        <div class="alert alert-danger">
            <h4 class="mb-1">Are you sure you want to delete this Service Record?</h4>
            <div><strong>(Id=@Id)</strong></div>
        </div>
        @if (_deleteErrorMessage is not null)
        {
            <div class="alert alert-danger">
                <strong>Sorry!</strong> We couldn’t delete the Service Record. @_deleteErrorMessage
            </div>
        }
        <div class="d-flex gap-2">
            <button class="btn btn-danger mt-3" @onclick="DeleteCurrentServiceRecordAsync" disabled="@_isDeleting">
                @if (_isDeleting)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                Delete
            </button>

            <button class="btn btn-secondary mt-3" @onclick="GoBack">Cancel</button>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private ServiceRecord _serviceRecord = default!;
    private EntityRepository<ServiceRecord> _serviceRecordRepository = default!;
    private bool _isLoading = true;
    private bool _notFound;
    private string? _loadErrorMessage;
    private bool _isDeleting;
    private string? _deleteErrorMessage;

    protected override async Task OnParametersSetAsync()
    {
        await LoadServiceRecordAsync();
    }

    private async Task LoadServiceRecordAsync()
    {
        _isLoading = true;
        _notFound = false;
        _loadErrorMessage = null;
        _deleteErrorMessage = null;

        try
        {
            _serviceRecordRepository = new EntityRepository<ServiceRecord>(CarMaintenanceDbContext);
            var serviceRecord = await _serviceRecordRepository.FindByIdAsync(Id);
            if (serviceRecord is not null)
            {
                _serviceRecord = serviceRecord;
            }
            else
            {
                _notFound = true;
            }
        }
        catch (Exception e)
        {
            _loadErrorMessage = $"Error loading Agency with Id {Id}: {e.Message}";
            Console.WriteLine(_loadErrorMessage);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task DeleteCurrentServiceRecordAsync()
    {
        if (_serviceRecord is null) return;

        _isDeleting = true;
        _deleteErrorMessage = null;

        try
        {
            _serviceRecordRepository = new EntityRepository<ServiceRecord>(CarMaintenanceDbContext);
            await _serviceRecordRepository.DeleteAsync(_serviceRecord);
            await _serviceRecordRepository.SaveChangesAsync();
            NavigationManager.NavigateTo($"/");
        }
        catch (Exception e)
        {
            _deleteErrorMessage = e.Message;
            Console.WriteLine(_deleteErrorMessage);
        }
        finally
        {
            _isDeleting = false;
        }
    }

    // TODO: Fix navigation to go back to the previous page instead of always going to the home page.
    private void GoBack() => NavigationManager.NavigateTo("/");
}
