@page "/create/service-record"

@using DataModelLibrary.Models
@using EntityFrameworkAccess.Repositories
@using EntityFrameworkAccess.Contexts

@inject NavigationManager NavigationManager
@inject CarMaintenanceDbContext CarMaintenanceDbContext

<title>Create Service Record</title>

<div class="d-flex justify-content-center mb-4 mt-4">
    <h2 class="fw-bold">Create New Service Record</h2>
</div>

<div class="container d-flex justify-content-center col-lg-8 mb-5">
    <EditForm Model="_serviceRecord" OnValidSubmit="CreateNewServiceRecordAsync" class="form-control bg-light" FormName="CreateServiceRecordForm">
        @if (_creationErrorMessage is not null)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Create failed:</strong> @_creationErrorMessage
            </div>
        }
        <ServiceRecordFormFields ServiceRecord="_serviceRecord" />
        <div class="d-flex gap-2 mt-3">
            <button class="btn btn-primary" type="submit" disabled="@_isSubmitting">
                @if (_isSubmitting)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                }
                Create Service Record
            </button>
        </div>
    </EditForm>
</div>

@code {
    private ServiceRecord _serviceRecord = new();
    private EntityRepository<ServiceRecord> _serviceRecordRepository = default!;
    private bool _isSubmitting;
    private string? _creationErrorMessage;

    private async Task CreateNewServiceRecordAsync()
    {
        _isSubmitting = true;
        _creationErrorMessage = null;

        try
        {
            _serviceRecordRepository = new EntityRepository<ServiceRecord>(CarMaintenanceDbContext);
            await _serviceRecordRepository.AddAsync(_serviceRecord);
            await _serviceRecordRepository.SaveChangesAsync();
            _serviceRecord = new ServiceRecord();
        }
        catch (Exception e)
        {
            _creationErrorMessage = e.Message;
            Console.WriteLine(_creationErrorMessage);
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
